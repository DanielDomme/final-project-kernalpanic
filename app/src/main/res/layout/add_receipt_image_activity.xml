<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/add_single_item_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/add_ai_button"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_action_add"
            android:gravity="left|center_vertical"
            android:text="Add Receipt Photo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginStart="50dp"
            android:textSize="24sp"
            android:text="Add using Azure AI"/>
        <View
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:id="@+id/add_manually_button"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_action_add"
            android:gravity="left|center_vertical"
            android:text="Add Object Photo"  />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginStart="70dp"
            android:textSize="24sp"
            android:text="Add manually"/>

    </LinearLayout>
</LinearLayout>